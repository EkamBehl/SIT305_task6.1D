<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".goodsType">

    <EditText
        android:id="@+id/heightEdit"
        android:layout_width="113dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Height"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.594" />

    <EditText
        android:id="@+id/lengthEdit"
        android:layout_width="113dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="LENGTH"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.594" />

    <RadioGroup
        android:id="@+id/vehicle_type_group"
        android:layout_width="217dp"
        android:layout_height="196dp"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="430dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/truckRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRUCK" />

        <RadioButton
            android:id="@+id/vanRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VAN" />

        <RadioButton
            android:id="@+id/refrigeratedTruckRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refrigerated Truck" />

        <RadioButton
            android:id="@+id/miniTruckRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MINI TRUCK" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOOD TYPE:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEIGHTS AND DIMENSIONS:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.449" />

    <RadioGroup
        android:id="@+id/goodTypeRadioGroup"
        android:layout_width="232dp"
        android:layout_height="191dp"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="-350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/furnitureRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FURNITURE" />

        <RadioButton
            android:id="@+id/dryGoodsRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DRY GOODS" />

        <RadioButton
            android:id="@+id/foodRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food" />

        <RadioButton
            android:id="@+id/buildingMaterialRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buildinmg Material" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VEHICLE TYPE:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.651" />

    <Button
        android:id="@+id/createOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE ORDER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.994" />

    <EditText
        android:id="@+id/weightsEdit"
        android:layout_width="113dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Weights"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514" />

    <EditText
        android:id="@+id/widthEdit"
        android:layout_width="113dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="WIDTH"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514" />
</androidx.constraintlayout.widget.ConstraintLayout>